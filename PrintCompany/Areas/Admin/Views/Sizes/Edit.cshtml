
@model PrintCompany.Core.ItemSize

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-weight: 500;">Edit Item Size</h2>
<hr />
<div class="row">
    <div class="col-sm-8">
        <div class="panel panel-default">
            @*<div class="panel-heading clearfix">
                <h3 class="panel-title">Customer Details</h3>
            </div>*@
            <div class="panel-body">
                <form action="/Admin/Sizes/Edit" method="post">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="Name">Size</label>
                        <input type="text" class="form-control" id="Size" name="Size" value="@Model.Size">
                    </div>
                    <div class="row">
                        <a href="/Admin/Size" class="btn btn-primary" style="margin:5px 5px 5px 15px; width:75px;">Back</a>
                        <input type="submit" class="btn btn-success" style="margin:5px; width:75px;" value="Save" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



