@model PrintCompany.Core.ContactType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-weight: 500;">Create New Contact Type</h2>
<hr />
<div class="row">
    <div class="col-sm-8">
        <div class="panel panel-default">            
            <div class="panel-body">
                <form action="/Admin/ContactTypes/Create" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="Color">Contact Type</label>
                        <input required type="text" class="form-control" id="ContactTypeName" name="ContactTypeName">
                    </div>
                    <div class="row">
                        <a href="/Admin/ContactTypes" class="btn btn-primary" style="margin:5px 5px 5px 15px; width:75px;">Cancel</a>
                        <input type="submit" class="btn btn-success" style="margin:5px; width:75px;" value="Submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


