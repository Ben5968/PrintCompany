@model PrintCompany.Core.Supplier

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-weight: 500;">Create New Supplier</h2>
<hr />
<div class="row">
    <div class="col-sm-8">
        <div class="panel panel-default">
            @*<div class="panel-heading clearfix">
                    <h3 class="panel-title">Type</h3>
                </div>*@
            <div class="panel-body">
                <form action="/Admin/Suppliers/Create" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input required type="text" class="form-control" id="Name" name="Name">
                    </div>
                    <div class="form-group">
                        <label for="Address">Address</label>
                        <input type="text" class="form-control" id="Address" name="Address">
                    </div>
                    <div class="form-group">
                        <label for="MainContact">Contact Name</label>
                        <input type="text" class="form-control" id="MainContact" name="MainContact">
                    </div>
                    <div class="form-group">
                        <label for="MainContactEmail">Contact Email</label>
                        <input type="email" class="form-control" id="MainContactEmail" name="MainContactEmail">
                    </div>
                    <div class="form-group">
                        <label for="ContactPhone">Contact Phone</label>
                        <input type="text" class="form-control" id="ContactPhone" name="ContactPhone">
                    </div>
                    <div class="form-group">
                        <label for="CompanyWebSite">Company Web Site</label>
                        <input type="text" class="form-control" id="CompanyWebSite" name="CompanyWebSite">
                    </div>
                    <div class="row">
                        <a href="/Admin/Suppliers" class="btn btn-primary" style="margin:5px 5px 5px 15px; width:75px;">Cancel</a>
                        <input type="submit" class="btn btn-success" style="margin:5px; width:75px;" value="Submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


