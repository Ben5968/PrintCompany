@model PrintCompany.Core.ItemColor

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-weight: 500;">Create New Color</h2>
<hr />
<div class="row">
    <div class="col-sm-8">
        <div class="panel panel-default">
            @*<div class="panel-heading clearfix">
                    <h3 class="panel-title">Type</h3>
                </div>*@
            <div class="panel-body">
                <form action="/Admin/Colors/Create" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="Color">Item Color</label>
                        <input required type="text" class="form-control" id="Color" name="Color">
                    </div>
                    <div class="row">
                        <a href="/Admin/Colors" class="btn btn-primary" style="margin:5px 5px 5px 15px; width:75px;">Cancel</a>
                        <input type="submit" class="btn btn-success" style="margin:5px; width:75px;" value="Submit" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


