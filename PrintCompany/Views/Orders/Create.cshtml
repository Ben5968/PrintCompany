@model PrintCompany.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .select2 {
        width: 100% !important;
    }    
</style>

<h2 style="font-weight: 500;">Create New Order</h2>
<hr />
    <div class="row">
        <div class="col-sm-5">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title">Order Details</h3>
                </div>
                <div class="panel-body">
                    <form action="/" method="post">
                        <div class="form-group">
                            <label for="OrderNumber">Order Number</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="OrderNumber" name="OrderNumber">
                                <span class="input-group-btn">
                                    <button class="btn btn-success" type="button">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="CustomerId">Customer</label>
                            <div>
                                <select class="Customer select2 form-control select2-hidden-accessible" style="width:500px;"></select>
                            </div>

                            @*<div class="input-group">
            <input type="text" class="form-control" id="CustomerId" name="CustomerId">
            <span class="input-group-btn">
                <button class="btn btn-success" type="button">
                    <i class="fa fa-ellipsis-h"></i>
                </button>
            </span>
        </div>*@
                        </div>
                        <div class="form-group">
                            <label for="OrderDate">Order Date</label>
                            <div id="OrderDate" class="input-group date date-popup" name="OrderDate">
                                <input type="text" class="form-control">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="DueDate">Due Date</label>
                            <div id="DueDate" class="input-group date date-popup" name="DueDate">
                                <input type="text" class="form-control">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="checkbox6">Embroider Required
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">Print Required
                            </label>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <a href="/Orders" class="btn btn-primary" style="margin:5px 5px 5px 15px; width:75px;">Cancel</a>
        <a href="/Orders" class="btn btn-success" style="margin:5px; width:75px;">Save</a>
    </div>


@section Scripts
    {

    <script>
        $(document).ready(function () {
            
            $('.date-popup').datepicker({
                autoclose: true,
                todayBtn: true,
                format: "dd/mm/yyyy",
                enableOnReadonly: false,
                keyboardNavigation: false,
                forceParse: false,
                todayHighlight: true
            });            

            $(".Customer").select2({
                placeholder: "Customer",
                //theme: "classic",
                ajax: {
                    url: "/Customers/GetCustomerList",
                    dataTYpe: "json",
                    data: function (params) {
                        return {
                            searchTerm: params.term
                        };
                    },
                    processResults: function (data, params) {
                        return {
                            results: data
                        };
                    }
                }
            });

            //$(".select2").select2();
            //$(".select2-placeholer").select2({
            //    allowClear: true
            //});
        });
    </script>
}
