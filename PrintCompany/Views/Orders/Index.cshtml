@model IList<PrintCompany.ViewModels.OrderViewModel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Orders";
}

<!-- Breadcrumb -->

<div class="row">
    <div class="col-md-4">
        <a href="/Orders/Create" class="btn btn-success" style="margin:10px;">Add Order</a>
    </div>
    <div class="col-md-8 orderheader">
        <h2 class="orderheader">ORDERS</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example nowrap">
                        <thead>
                            <tr>
                                <th style="width: 15%">Order NO</th>
                                <th style="width: 15%">Order Date</th>
                                <th style="width: 15%">Due Date</th>
                                <th style="width: 10%">Print</th>
                                <th style="width: 10%">Embroider</th>
                                <th style="width: 20%">Customer</th>
                                <th style="width: 15%">Order Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>Order No</td>
                                    <td><span style="display:none;">@item.OrderDate.ToString("yyyyMMdd")</span>@item.OrderDate.ToString("dd/MM/yyyy")</td>
                                    <td>@string.Format("{0:dd/MM/yyyy}", item.DueDate)</td>
                                    <td>@(item.PrintRequired ? "Yes" : "No") <input type="checkbox" name="@item.PrintRequired" value="@item.PrintRequired" checked="@item.PrintRequired" onclick="return false" ;></td>
                                    <td>@(item.EmbroideryRequired ? "Yes" : "No") <input type="checkbox" name="@item.EmbroideryRequired" value="@item.PrintRequired" checked="@item.EmbroideryRequired" onclick="return false" ;></td>
                                    <td>Customer</td>
                                    <td>
                                        @*<a class="badge badge-primary" href="/Admin/EditBlog/@item.Id">Edit</a> |
                                            <a class="badge badge-danger" href="/Admin/DeleteBlog/@item.Id"
                                            onclick="return checkDelete()">Delete</a>*@
                                        <a class="badge badge-primary" data-toggle="modal" data-target="#modal-1" href="/Admin/EditBlog/@item.Id">Edit</a> |
                                        <a class="badge badge-danger" href="/Admin/DeleteBlog/@item.Id"
                                           onclick="return checkDelete()">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {            
            $('.dataTables-example').DataTable({
                dom: '<"html5buttons" B>ftlp',
                buttons: [
                    {
                        extend: 'copyHtml5',
                        exportOptions: {
                            columns: [0, ':visible']
                        }
                    },
                    {
                        extend: 'excelHtml5',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'pdfHtml5',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        }
                    },
                    'colvis'
                ]
            });
            $('#datepicker').datepicker({
                keyboardNavigation: false,
                forceParse: false,
                todayHighlight: true
            });

            $('#date-popup').datepicker({
                keyboardNavigation: false,
                forceParse: false,
                todayHighlight: true
            });

            $('#year-view').datepicker({
                startView: 2,
                keyboardNavigation: false,
                forceParse: false,
                format: "mm/dd/yyyy"
            });

            $(".select2").select2();
            $(".select2-placeholer").select2({
                allowClear: true
            });

        });
    </script>
}
<style>
    .orderheader {
        font-size: 30px;
        font-weight: 500;
        padding-top: 4px;
    }
</style>