@model IList<PrintCompany.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Orders";
}

@section Styles
    {
    <link href="~/Content/css/plugins/datatables/jquery.dataTables.css" rel="stylesheet">
    <link href="~/Scripts/plugins/datatables/extensions/Buttons/css/buttons.dataTables.css" rel="stylesheet">
}

<div class="row">
    <div class="col-md-4">
        <a href="/Orders/Create" class="btn btn-success" style="margin:10px;">Add Order</a>
    </div>
    <div class="col-md-8 orderheader">
        <div class="col-sm-6 col-xs-7">
            <div class="pull-left">
                @*<h2 class="orderheader">ORDERS</h2>*@
                <h2 class="orderheader">ORDERS</h2>
            </div>
        </div>
        <div class="class=" col-sm-6 col-xs-5"">
            <div class="pull-right">
                <form id="formSubmitLogout" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="icon-user"></i><span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" onclick="document.getElementById('formSubmitLogout').submit();"><i class="icon-logout"></i>Logout</a></li>
                        </ul>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-orders nowrap" style="table-layout:fixed;">
                        <thead>
                            <tr>
                                <th>Order No</th>
                                <th>Customer</th>
                                <th>Order Date</th>
                                <th>Due Date</th>
                                <th style="white-space: normal !important;">Print Amount</th>
                                <th style="white-space: normal !important;">Print Completed</th>
                                <th style="white-space: normal !important;">Embroidery Amount</th>
                                <th style="white-space: normal !important;">Embroidery Completed</th>
                                @*<th></th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="overflow:hidden; padding: 2px;"><a href="/Orders/Edit/@item.Id" class="btn btn-info" style="width: 100%"><u>@item.Id</u></a></td>
                                    <td style="overflow:hidden;">@item.CustomerName</td>
                                    <td style="overflow:hidden;"><span style="display:none;">@item.OrderDate.ToString("yyyyMMdd")</span>@item.OrderDate.ToString("dd/MM/yyyy")</td>
                                    <td style="overflow:hidden;">@string.Format("{0:dd/MM/yyyy}", item.DueDate)</td>
                                    @*<td style="overflow:hidden;">@(item.PrintRequired ? "Yes" : "No") <input type="checkbox" name="@item.PrintRequired" value="@item.PrintRequired" checked="@item.PrintRequired" onclick="return false" ;></td>*@
                                    <td>@item.PrintQuantityTotalByOrder</td>
                                    <td>@item.PrintQuantityCompletedTotalByOrder</td>
                                    @*<td style="overflow:hidden;">@(item.EmbroideryRequired ? "Yes" : "No") <input type="checkbox" name="@item.EmbroideryRequired" value="@item.PrintRequired" checked="@item.EmbroideryRequired" onclick="return false" ;></td>*@
                                    <td>@item.EmbroideryQuantityTotalByOrder</td>
                                    <td>@item.EmbroideryQuantityCompletedTotalByOrder</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $('.dataTables-orders').DataTable({
                dom: '<"html5buttons" B>ftlp',
                buttons: [
                    //{
                    //    extend: 'copyHtml5',
                    //    exportOptions: {
                    //        columns: [0, ':visible']
                    //    }
                    //},
                    {
                        extend: 'excelHtml5',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'pdfHtml5',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5, 6, 7]
                        }
                    },
                    'colvis'
                ],
                columnDefs: [
                    { width: '10%', targets: 0 },
                    { width: '20%', targets: 1 },
                    { width: '15%', targets: 2 },
                    { width: '15%', targets: 3 },
                    { width: '12%', targets: 4 },
                    { width: '12%', targets: 5 },
                    { width: '12%', targets: 6 },
                    { width: '12%', targets: 7 },
                ]
            });
        });
    </script>
    <script>
        function checkDelete() {
            var result = confirm("Do you want to delete the record");
            if (result) {
                return true;
            }
            return false;
        }

    </script>

}
<style>
    .orderheader {
        font-size: 30px;
        font-weight: 500;
        padding-top: 4px;
    }
</style>

