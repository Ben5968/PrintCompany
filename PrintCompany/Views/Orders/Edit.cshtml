        function RequiredChecked(el) {
            var hideCheckClass = '.' + el.id.substr(0, el.id.indexOf('Required')) + 'Quantity' + ((el.id.indexOf('Edit') !== -1) ? 'Edit' : 'Add');
            var hideCheckId = '#' + el.id.substr(0, el.id.indexOf('Required')) + 'Quantity' + ((el.id.indexOf('Edit') !== -1) ? 'Edit' : 'Add');            

            if (el.checked) {                
                $(hideCheckId).val(1);
                 $('#PrintTotalQuantity').val($('#Quantity').val() * $('#PrintQuantityAdd').val());
                $('#EmbroideryTotalQuantity').val($('#Quantity').val() * $('#EmbroideryQuantityAdd').val());
                 $('#PrintTotalQuantityEdit').val($('#QuantityEdit').val() * $('#PrintQuantityEdit').val());
                $('#EmbroideryTotalQuantityEdit').val($('#QuantityEdit').val() * $('#EmbroideryQuantityEdit').val());
                $(hideCheckClass).show();
            }
            else {                
                $(hideCheckId).val(0);
                 $('#PrintTotalQuantity').val($('#Quantity').val() * $('#PrintQuantityAdd').val());
                $('#EmbroideryTotalQuantity').val($('#Quantity').val() * $('#EmbroideryQuantityAdd').val());
                 $('#PrintTotalQuantityEdit').val($('#QuantityEdit').val() * $('#PrintQuantityEdit').val());
                $('#EmbroideryTotalQuantityEdit').val($('#QuantityEdit').val() * $('#EmbroideryQuantityEdit').val());
                $(hideCheckClass).hide();
            }
        }

    function modal1Show() {
        $('#PrintQuantityAdd').val(0);
        $('#EmbroideryQuantityAdd').val(0);
        $('#modal-1').modal('show');
    }
