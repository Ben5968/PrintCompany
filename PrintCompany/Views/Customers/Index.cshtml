@model IEnumerable<PrintCompany.Core.Customer>

@{
    ViewData["Title"] = "Customers";
}

@section Styles
    {
    <link href="~/Content/css/datatables.min.css" rel="stylesheet" />
    <style>
        .orderheader {
            font-size: 30px;
            font-weight: 500;
            padding-top: 4px;
        }
    </style>
}

<div class="row">
    <div class="col-md-4">
        <a href="/Customers/Create" class="btn btn-success" style="margin:10px;">Add Customer</a>
    </div>
    <div class="col-md-8 orderheader">
        <h2 class="orderheader">CUSTOMERS</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-customers nowrap" style="table-layout:fixed;">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Main Contact</th>
                                <th>Contact Phone</th>
                                <th>Contact Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <a class="badge badge-primary" href="/Customers/Edit/@item.Id">Edit</a> |
                                    <a class="badge badge-danger" href="/Customers/Delete/@item.Id"
                                       onclick="return checkDelete()">Delete</a>
                                </td>
                                <td style="overflow:hidden;">@item.Name</td>
                                <td style="overflow:hidden;">@item.BillingAddress</td>
                                <td style="overflow:hidden;">@item.MainContact</td>
                                <td style="overflow:hidden;">@item.ContactPhone</td>
                                <td style="overflow:hidden;">@item.ContactEmail</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/Scripts/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.dataTables-customers').DataTable({               
                dom: '<"html5buttons" B>ftlp',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5]
                        }
                    },
                    {
                        extend: 'pdfHtml5',
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5]
                        }
                    },
                    'colvis'
                ],
                columnDefs: [
                    { width: '10%', targets: 0 },
                    { width: '20%', targets: 1 },
                    { width: '25%', targets: 2 },
                    { width: '15%', targets: 3 },
                    { width: '15%', targets: 3 }
                ]
            });
        });
    </script>
    <script>
        function checkDelete() {
            var result = confirm("Do you want to delete the record");
            if (result) {
                return true;
            }
            return false;
        }

    </script>

}
