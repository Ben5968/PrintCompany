@model IList<PrintCompany.ViewModels.OrderCustomerContactViewModel>

<form action="/OrderCommunication/Create/" method="post">
    @Html.AntiForgeryToken()
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover dataTables-orderLines nowrap" style="table-layout:fixed; width:100%;">
            <thead>                
                <tr>
                    <th width="10%"></th>
                    <th width="10%"><strong>Contact Type</strong></th>
                    <th width="10%"><strong>Contact Date</strong></th>
                    <th width="10%"><strong>Contacted By</strong></th>
                    <th width="60%"><strong>Notes</strong></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a class="link" style="color: #2a5db0; cursor: pointer;text-decoration: underline;" href="#"
                               data-orderLineId="@item.Id" onclick="return fillCustomerContactEditinfo(this.getAttribute('data-orderLineId') )">
                                Edit
                            </a> |
                            <a class="link" style="color: #2a5db0; cursor: pointer;text-decoration: underline;"
                               href="#" onclick="return checkDeleteOrderLine(@item.Id)">Delete</a>
                        </td>
                        <td style="overflow:hidden;">@item.ContactType.ContactTypeName</td>                        
                        <td style="overflow:hidden;">
                            @item.ContactDate?.ToString("dd/MM/yyyy")
                        </td>                        
                        <td style="overflow:hidden;">@item.ContactedBy</td>
                        <td style="overflow:hidden;">@item.Notes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>