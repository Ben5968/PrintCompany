
@model PrintCompany.ViewModels.OrderCustomerContactViewModel

<div id="modal_communication_add" class="modal fade" role="dialog" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="panel-body">
                    <form method="post" id="orderCommunicationAddPost" class="modalForm form-horizontal">
                        <input type="hidden" name="OrderId" value="@Model.OrderId" />
                        <div class="form-group">
                            <label for="ContactTypeId" class="col-sm-3 control-label">Contact Type</label>
                            <div class="col-sm-4">
                                <select class="ContactType select2 form-control select2-hidden-accessible select2clear required" name="ContactTypeId" id="ContactTypeId"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.ContactDate, new { @class = "col-md-3 control-label" })
                            <div class="col-sm-4">
                                @Html.EditorFor(x => x.ContactDate, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ContactedBy" class="col-sm-3 control-label">Contacted By</label>
                            <div class="col-sm-7">
                                <input type="text" placeholder="Contacted By" class="form-control" name="ContactedBy" id="ContactedBy">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-3" for="Notes">Notes</label>
                            <div class="col-sm-12">
                                <textarea placeholder="Notes" rows="10" cols="70" class="form-control" name="Notes" id="Notes"></textarea>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary" data-dismiss="modal" style="margin:5px 5px 5px 0px; width:75px;">Close</button>
                        <input type="submit" id="OrderCommunicationSubmitButton" class="btn btn-success"
                               style="margin:5px; width:75px;" value="Save"/>
                    </form>
                </div>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>