@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc.Razor;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<meta name="description" content="Mouldifi - A fully responsive, HTML5 based admin theme">
        <meta name="keywords" content="Responsive, HTML5, admin theme, business, professional, Mouldifi, web design, CSS3">*@
    <title>Print Company</title>
    <!-- Site favicon -->
    @*<link rel='shortcut icon' type='image/x-icon' href='~/Content/images/favicon.ico' />*@
    <!-- /site favicon -->
    <!-- Entypo font stylesheet -->
    <link href="~/Content/css/entypo.css" rel="stylesheet" />
    <!-- /entypo font stylesheet -->
    <!-- Font awesome stylesheet -->
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <!-- /font awesome stylesheet -->
    <!-- Bootstrap stylesheet min version -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <!-- /bootstrap stylesheet min version -->
    <!-- Mouldifi core stylesheet -->
    <link href="~/Content/css/mouldifi-core.css" rel="stylesheet" />

    <link href="~/Content/css/plugins/datepicker/bootstrap-datepicker.css" rel="stylesheet">
    <link href="~/Content/css/plugins/colorpicker/bootstrap-colorpicker.css" rel="stylesheet">
    <link href="~/Content/css/plugins/nouislider/nouislider.css" rel="stylesheet">
    <link href="~/Content/css/plugins/select2/select2.css" rel="stylesheet">

    <!-- /mouldifi core stylesheet -->
    <link href="~/Content/css/mouldifi-forms.css" rel="stylesheet" />

    <link href="~/Content/css/plugins/datatables/jquery.dataTables.css" rel="stylesheet">
    <link href="~/Scripts/plugins/datatables/extensions/Buttons/css/buttons.dataTables.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="~/Scripts/html5shiv.min.js"></script>
          <script src="~/Scripts/respond.min.js"></script>
    <![endif]-->
    <!--[if lte IE 8]>
        <script src="~/Scripts/plugins/flot/excanvas.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Page container -->
    @*This is default template*@
    @*<div class="page-container">*@
    <div class="page-container @(Context.Request.Cookies["SideBarCollapse"] == null ? "off" : (Context.Request.Cookies["SideBarCollapse"] == "off" ? "" : "sidebar-collapsed can-resize"))">
        <!-- Page Sidebar -->
        <div class="page-sidebar">
            <!-- Site header  -->
            <header class="site-header">
                <div class="site-logo"><a href="/Home"><img src="http://placehold.jp/99ccff/003366/160x28.png?text=LOGO" alt="Mouldifi" title="Mouldifi"></a></div>
                <div class="sidebar-collapse hidden-xs"><a class="sidebar-collapse-icon" href="#"><i class="icon-menu"></i></a></div>
                <div class="sidebar-mobile-menu visible-xs"><a data-target="#side-nav" data-toggle="collapse" class="mobile-menu-icon" href="#"><i class="icon-menu"></i></a></div>
            </header>
            <!-- /site header -->
            <!-- Main navigation -->
            <ul id="side-nav" class="main-menu navbar-collapse collapse">
                @{string area = (RazorViewEngine.GetNormalizedRouteValue(ViewContext, "area") == "Admin" ? "active" : ""); }

                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Orders" ? "active" : "")">
                    <a href="/Orders"><i class="icon-gauge"></i><span class="title">Orders</span></a>
                </li>
                <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Customers" ? "active" : "")">
                    <a href="/Customers"><i class="icon-users"></i><span class="title">Customers</span></a>
                </li>
                <li class="has-sub @area">
                    <a href="@Url.Action("Index", "Types", new { area = "Admin" })"><i class="icon-cog"></i><span class="title">Admin</span></a>
                    <ul class="nav collapse">
                        <li class="@area">
                            <a href="@Url.Action("Index", "Types", new { area = "Admin" })"><span class="title">Item Types</span></a>
                        </li>
                        <li><a href="form-advanced.html"><span class="title">Item Sizes</span></a></li>
                        <li><a href="form-wizard.html"><span class="title">Item Colors</span></a></li>
                    </ul>
                </li>

            </ul>
            <!-- /main navigation -->
        </div>
        <!-- /page sidebar -->
        <!-- Main container -->
        <div class="main-container gray-bg">

            <!-- Main header -->
            <!-- /main header -->
            <!-- Main content -->
            <div class="main-content">

                @RenderBody()

                <!-- Footer -->
                <!-- /footer -->

            </div>
            <!-- /main content -->

        </div>
        <!-- /main container -->

    </div>
    <!-- /page container -->
    <!--Load JQuery-->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins/metismenu/jquery.metisMenu.js"></script>
    <script src="~/Scripts/plugins/blockui-master/jquery-ui.js"></script>
    <script src="~/Scripts/plugins/blockui-master/jquery.blockUI.js"></script>
    <!--nouiSlider-->
    <script src="~/Scripts/plugins/nouislider/nouislider.min.js"></script>
    <!-- Input Mask-->
    <script src="~/Scripts/plugins/jasny/jasny-bootstrap.min.js"></script>
    <!-- Select2-->
    <script src="~/Scripts/plugins/select2/select2.full.min.js"></script>
    <!--Bootstrap ColorPicker-->
    <script src="~/Scripts/plugins/colorpicker/bootstrap-colorpicker.min.js"></script>
    <!--Bootstrap DatePicker-->
    <script src="~/Scripts/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/functions.js" type="text/javascript"></script>

    <script src="~/Scripts/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/plugins/datatables/extensions/Buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/plugins/datatables/jszip.min.js"></script>
    <script src="~/Scripts/plugins/datatables/pdfmake.min.js"></script>
    <script src="~/Scripts/plugins/datatables/vfs_fonts.js"></script>
    <script src="~/Scripts/plugins/datatables/extensions/Buttons/js/buttons.html5.js"></script>
    <script src="~/Scripts/plugins/datatables/extensions/Buttons/js/buttons.colVis.js"></script>

    @RenderSection("Scripts", false)

</body>
</html>
