@model IList<PrintCompany.ViewModels.OrderViewModel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Orders";
}

<!-- Breadcrumb -->

<div class="row">
    <div class="col-md-4">
        <button type="button" class="btn btn-success" style="margin:10px;">Add Order</button>
    </div>
    <div class="col-md-8 orderheader">
        <h2 class="orderheader">ORDERS</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th style="width: 15%">Order NO</th>
                                <th style="width: 15%">Order Date</th>
                                <th style="width: 15%">Due Date</th>
                                <th style="width: 10%">Print</th>
                                <th style="width: 10%">Embroider</th>
                                <th style="width: 20%">Customer</th>
                                <th style="width: 15%">Order Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>Order No</td>
                                    <td><span style="display:none;">@item.OrderDate.ToString("yyyyMMdd")</span>@item.OrderDate.ToString("dd/MM/yyyy")</td>
                                    <td>@string.Format("{0:dd/MM/yyyy}", item.DueDate)</td>
                                    @*<td>@(item.PrintRequired ? "Yes" : "No") <input type="checkbox" name="@item.PrintRequired" value="@item.PrintRequired" checked="@item.PrintRequired" onclick="return false" ;></td>
                                    <td>@(item.EmbroideryRequired ? "Yes" : "No") <input type="checkbox" name="@item.EmbroideryRequired" value="@item.PrintRequired" checked="@item.EmbroideryRequired" onclick="return false" ;></td>*@
                                    <td>Customer</td>
                                    <td>
                                        @*<a class="badge badge-primary" href="/Admin/EditBlog/@item.Id">Edit</a> |
                                            <a class="badge badge-danger" href="/Admin/DeleteBlog/@item.Id"
                                            onclick="return checkDelete()">Delete</a>*@
                                        <a class="badge badge-primary" data-toggle="modal" data-target="#modal-1" href="/Admin/EditBlog/@item.Id">Edit</a> |
                                        <a class="badge badge-danger" href="/Admin/DeleteBlog/@item.Id"
                                           onclick="return checkDelete()">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!--Basic Modal-->
<div id="modal-1" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Order Details</h4>
            </div>
            <div class="modal-body">
                <div class="panel-body">
                    <form action="/" method="post">
                        <div class="form-group">
                            <label for="emailaddress">Order Number</label>
                            <input type="text" class="form-control" id="ordernumber">
                        </div>
                        <div class="form-group">
                            <label for="emailaddress">Order Date</label>
                            <div id="date-popup" class="input-group date">
                                <input type="text" data-format="D, dd MM yyyy" class="form-control">
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="emailaddress">Email address</label>
                            <input type="email" class="form-control" id="emailaddress">
                        </div>
                        <div class="form-group">
                            <label for="emailaddress">Email address</label>
                            <input type="email" class="form-control" id="emailaddress">
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox">Check me out</label>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--End Large Modal-->

@section Scripts
    {

    <script>
        $(document).ready(function () {
            $('.dataTables-example').DataTable({
                dom: '<"html5buttons" B>ftlp',
                buttons: [
                    {
                        extend: 'copyHtml5',
                        exportOptions: {
                            columns: [0, ':visible']
                        }
                    },
                    {
                        extend: 'excelHtml5',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'pdfHtml5',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        }
                    },
                    'colvis'
                ]
            });
            $('#datepicker').datepicker({
                keyboardNavigation: false,
                forceParse: false,
                todayHighlight: true
            });

            $('#date-popup').datepicker({
                keyboardNavigation: false,
                forceParse: false,
                todayHighlight: true
            });

            $('#year-view').datepicker({
                startView: 2,
                keyboardNavigation: false,
                forceParse: false,
                format: "mm/dd/yyyy"
            });

            $(".select2").select2();
            $(".select2-placeholer").select2({
                allowClear: true
            });

        });
    </script>
}
<style>
    .orderheader {
        font-size: 30px;
        font-weight: 500;
        padding-top: 4px;
    }
</style>